{% if (ctx.component.prefix || ctx.component.suffix) { %}
<div class="input-group">
  {% } %}
{% if (ctx.component.prefix) { %}
<div ref="prefix" class="input-prefix-tag">
  <span>
    {{ctx.component.prefix}}
  </span>
</div>
{% } %}
<{{ctx.input.type}}
ref="{{ctx.input.ref ? ctx.input.ref : 'input'}}"
style="margin-bottom: 10px"
{% for (var attr in ctx.input.attr) { %}
{{attr}}="{{ctx.input.attr[attr]}}{% if (attr==='class') { if (ctx.input.type === 'textarea'){ %} govuk-textarea {% } else { %} govuk-input {%} } %}"
{% } %}
id="{{ctx.instance.id}}-{{ctx.component.key}}"
>{{ctx.input.content}}
</{{ctx.input.type}}>
{% if (ctx.component.showCharCount) { %}
<span class="govuk-hint govuk-character-count__message" style="float:left; margin-right: 5px" ref="charcount"></span>
{% } %}
{% if (ctx.component.showWordCount) { %}
<span class="govuk-hint govuk-character-count__message" style="float:left; margin-right: 5px" ref="wordcount"></span>
{% } %}
{% if (ctx.component.suffix) { %}
<div class="input-suffix-tag">
  <span>
    {{ctx.component.suffix}}
  </span>
</div>
{% } %}
{% if (ctx.component.prefix || ctx.component.suffix) { %}
</div>
{% } %}