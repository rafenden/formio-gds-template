{% if (ctx.component.prefix || ctx.component.suffix) { %}
<div class="input-group">
  {% } %}
{% if (ctx.component.prefix) { %}
<div ref="prefix" style="height: 2.5rem;
    margin-top: 0;
    padding: 5px;
    border: 2px solid #0b0c0c;
    min-width: 3rem;
    text-align: center;
    background-color: #1d70b8;
    border-right: none;
    color: white;">
  <span>
    {{ctx.component.prefix}}
  </span>
</div>
{% } %}
<{{ctx.input.type}}
ref="{{ctx.input.ref ? ctx.input.ref : 'input'}}"
style="margin-bottom: 10px"
{% for (var attr in ctx.input.attr) { %}
{{attr}}="{{ctx.input.attr[attr]}}{% if (attr==='class') { if (ctx.input.type === 'textarea'){ %} govuk-textarea {% } else { %} govuk-input {%} } %}"
{% } %}
>{{ctx.input.content}}
</{{ctx.input.type}}>
{% if (ctx.component.showCharCount) { %}
<span class="govuk-hint govuk-character-count__message" ref="charcount"></span>
{% } %}
{% if (ctx.component.showWordCount) { %}
<span class="govuk-hint govuk-character-count__message" ref="wordcount"></span>
{% } %}
{% if (ctx.component.suffix) { %}
<div style="height: 2.5rem;
    margin-top: 0;
    padding: 5px;
    border: 2px solid #0b0c0c;
    min-width: 3rem;
    text-align: center;
    background-color: #1d70b8;
    border-left: none;
    color: white;" ref="suffix">
  <span>
    {{ctx.component.suffix}}
  </span>
</div>
{% } %}
{% if (ctx.component.prefix || ctx.component.suffix) { %}
</div>
{% } %}