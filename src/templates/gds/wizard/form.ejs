<div style="position: relative;">
    <div class="govuk-breadcrumbs">
        <ol class="govuk-breadcrumbs__list">
            {% ctx.panels.forEach(function(panel, index) { %}
            {% if (ctx.currentPage === index) { %}
            <li class="govuk-breadcrumbs__list-item" ref="{{ctx.wizardKey}}-link">{{panel.title}}</li>
            {% } else { %}
            <li class="govuk-breadcrumbs__list-item">
                <a style="text-decoration:underline" class="govuk-breadcrumbs__link" href="#" ref="{{ctx.wizardKey}}-link">{{panel.title}}</a>
            </li>
            {% } %}
            {% }) %}
        </ol>
    </div>
    <div class="wizard-page" ref="{{ctx.wizardKey}}">
        {{ctx.components}}
    </div>
        {% if (ctx.buttons.cancel) { %}
        <button class="govuk-button govuk-button--secondary" ref="{{ctx.wizardKey}}-cancel">{{ctx.t('cancel')}}</button>
        {% } %}
        {% if (ctx.buttons.previous) { %}
        <button class="govuk-button " ref="{{ctx.wizardKey}}-previous">{{ctx.t('previous')}}</button>
        {% } %}
        {% if (ctx.buttons.next) { %}
        <button class="govuk-button" ref="{{ctx.wizardKey}}-next">{{ctx.t('next')}}</button>
        {% } %}
        {% if (ctx.buttons.submit) { %}
            <button class="govuk-button" ref="{{ctx.wizardKey}}-submit">{{ctx.t('submit')}}</button>
        {% } %}
</div>